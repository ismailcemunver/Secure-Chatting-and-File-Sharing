<%- include('includes/head.ejs') %>
<link rel="stylesheet" href="/css/mainscreen.css">
<link rel="stylesheet" href="https://fonts.googleapis.com/css?family=Raleway">
<link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/4.7.0/css/font-awesome.min.css">
</head>
<body>

<header class="panel center opacity" style="padding:128px 16px">
  <center>
    <h1 class="xlarge">Welcome to SCAFS</h1>
  </center>
  <center>
    <h1>Secure Chatting and File Sharing</h1>
  </center>
  
  <div class="padding-32">
    <div class="bar border">
      <a href="/login" class="bar-item button">Login</a>
      <a href="/chats" class="bar-item button light-grey">Chats</a>
      <a href="/register" class="bar-item button">Register</a>
    </div>
  </div>
</header>
</div>

<script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
<script>
$(document).ready(function() {
  $(".xlarge").hide().each(function(index) {
    $(this).delay(500 * index).fadeIn(1000);
  });

  $("h1:not(.xlarge)").hide().each(function(index) {
    $(this).delay(500 + 500 * index).fadeIn(1000);
  });
});
</script>

</body>
</html>
